{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./bin",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedLocals": false
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
